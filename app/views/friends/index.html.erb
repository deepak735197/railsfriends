
<% if user_signed_in? %>

      <p style="color: green"><%= notice %></p>

      <table class="table table-striped table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone No.</th>
              <th>Twitter</th>
              <th>User Id</th>
            </tr>
          </thead>

          <tbody>
            <% @friends.each do |friend| %>
              <% if friend.user == current_user %>
                  <tr>
                    <td>
                    <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
                    </td>
                    
                    <td><%=friend.email %></td>
                    <td><%=friend.phone %></td>
                    <td><%=friend.twitter %></td>
                    <td><%=friend.user_id %></td>
                  
                    <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'you are sure?' }, class: "btn btn-danger btn-sm" %></td>
                  </tr>
              <% end %> 
            <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>

<h1> HELLO WORLD! </h1>
this is my first project!..

<% end %>


